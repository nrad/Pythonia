<?xml version="1.0" encoding="UTF-8"?><modul xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="modul.xsd" name="AdsrExpMidi" description="MIDI activated exponential ADSR envelope">  <input>    <vardef name="amp" csType="i" value="1" description="Amplitude scale factor"/>    <vardef name="atk" csType="i" value="0.01" min="0" description="Attack time in seconds"/>    <vardef name="dec" csType="i" min="0" description="Decay time in seconds"/>    <vardef name="slev" csType="i" value="1" min="0" max="1" description="Sustain level"/>    <vardef name="rel" csType="i" value="0.01" min="0" description="Release time in seconds"/>  </input>  <output>    <vardef name="env" csType="k" description="Envelope at control rate"/>  </output>  <opcode>/* MIDI activated exponential ADSR envelope */opcode AdsrExpMidi, k, iiiii  iamp, iatk, idec, islev, irel xin  kenv     mxadsr     iatk, idec, islev, irel  kenv     =          iamp*kenv  xout kenvendop  </opcode></modul>